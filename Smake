src/ui/gui/icons/256x256/%.png : src/ui/gui/artwork/scalable/%.svg build-aux/svg2png src/ui/gui/icons/COPYING_CCBYSA3
	mkdir -p $(dir $@)
	build-aux/svg2png "$<" "$(lastword $^)" "$@"

